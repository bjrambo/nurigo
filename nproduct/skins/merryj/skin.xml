<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">
	<title xml:lang="ko">메리제이 쇼핑몰</title>
	<description xml:lang="ko">메리제이 쇼핑몰 스킨입니다</description>
	<version>1.0</version>
	<date>2014-08-25</date>
	<link>http://nurigo.net</link>

	<author email_address="contact@nurigo.net" link="http://www.nurigo.net">
		<name xml:lang="ko">NURIGO</name>
	</author>

	<colorset>
		<color name="white">
			<title xml:lang="ko">하얀색(기본)</title>
		</color>
		<color name="black">
			<title xml:lang="ko">검정색</title>
		</color>
	</colorset>

	<extra_vars>
		<group>
			<title xml:lang="ko">상세페이지</title>
			<var name="thumbnail_width" type="text">
				<title xml:lang="ko">썸네일 가로크기</title>
				<description xml:lang="ko">
					썸네일 가로크기 설정 (px 제외 입력)
				</description>
			</var>
			<var name="thumbnail_height" type="text">
				<title xml:lang="ko">썸네일 세로크기</title>
				<description xml:lang="ko">
					썸네일 세로크기 설정 (px 제외 입력)
				</description>
			</var>
			<var name="thumbnail_type" type="select">
				<title xml:lang="ko">썸네일 생성 방법</title>
				<description xml:lang="ko">썸네일 생성 방법을 선택할 수 있습니다.</description>
				<options value="crop">
					<title xml:lang="ko">꽉 채우기</title>
				</options>
				<options value="ratio">
					<title xml:lang="ko">비율 맞추기</title>
				</options>
			</var>
		</group>

		<group>
			<title xml:lang="ko">상품목록</title>
			<var name="recommenditem_on" type="select">
				<title xml:lang="ko">추천상품 출력</title>
				<description xml:lang="ko">목록 상단에 추천상품을 진열합니다.</description>
				<options value="Y">
					<title xml:lang="ko">보이기</title>
				</options>
				<options value="N">
					<title xml:lang="ko">보이지 않기</title>
				</options>
			</var>
			<var name="list_style" type="select">
				<title xml:lang="ko">상품목록 출력형식</title>
				<description />
				<options value="list">
					<title xml:lang="ko">리스트</title>
				</options>
				<options value="grid">
					<title xml:lang="ko">그리드</title>
				</options>
			</var>
			<var name="display_cart_buttons" type="select">
				<title xml:lang="ko">전체 장바구니 버튼</title>
				<description xml:lang="ko">전체 장바구니 버튼 출력 여부를 선택할 수 있습니다.</description>
				<options value="Y">
					<title xml:lang="ko">출력함</title>
				</options>
				<options value="N">
					<title xml:lang="ko">출력하지 않음</title>
				</options>
			</var>			
			<var name="search_on" type="select">
				<title xml:lang="ko">검색창</title>
				<description xml:lang="ko">검색창 출력 여부를 선택할 수 있습니다.</description>
				<options value="Y">
					<title xml:lang="ko">출력함</title>
				</options>
				<options value="N">
					<title xml:lang="ko">출력하지 않음</title>
				</options>
			</var>	
			<var name="list_count" type="text">
				<title xml:lang="ko">한페이지 출력상품 갯수</title>
				<description xml:lang="ko">
					미입력시 기본 30개 출력
				</description>
			</var>
			<var name="list_thumbnail_width" type="text">
				<title xml:lang="ko">[목록] 썸네일 가로크기</title>
				<description xml:lang="ko">
					썸네일 가로크기 설정 (px 제외 입력)
				</description>
			</var>
			<var name="list_thumbnail_height" type="text">
				<title xml:lang="ko">[목록] 썸네일 세로크기</title>
				<description xml:lang="ko">
					썸네일 세로크기 설정 (px 제외 입력)
				</description>
			</var>
			<var name="list_thumbnail_type" type="select">
				<title xml:lang="ko">[목록] 썸네일 생성 방법</title>
				<description xml:lang="ko">썸네일 생성 방법을 선택할 수 있습니다.</description>
				<options value="crop">
					<title xml:lang="ko">꽉 채우기</title>
				</options>
				<options value="ratio">
					<title xml:lang="ko">비율 맞추기</title>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">기타</title>
			<var name="store_top" type="textarea">
				<title xml:lang="ko">스토어 상단</title>
				<description xml:lang="ko">
					스토어 상단 부분에 출력되는 부분입니다.
				</description>
			</var>
			<var name="store_bottom" type="textarea">
				<title xml:lang="ko">스토어 하단</title>
				<description xml:lang="ko">
					스토어 하단 부분에 출력되는 부분입니다.
				</description>
			</var>
		</group>
	</extra_vars>
</skin>
